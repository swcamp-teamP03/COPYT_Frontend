{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonJS",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}